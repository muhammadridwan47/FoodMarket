<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.detail.PaymentSuccessFragment"
    android:orientation="vertical"
    android:layout_marginTop="100dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/ivLogo"
        android:src="@drawable/ic_success_order"
        android:layout_width="200dp"
        android:layout_height="201dp" />

    <TextView
        android:id="@+id/tvTitle"
        android:text="Youâ€™ve Made Order"
        android:layout_marginTop="30dp"
        style="@style/TextView.PoppinsNormal14sp020202"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvSubTitle"
        android:text="Just stay at home while we are\n preparing your best foods"
        style="@style/TextView.PoppinsNormal14sp8D92A3"
        android:layout_marginTop="6dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnOrderFood"
        android:text="Order Other Foods"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        style="@style/Button.Primary"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnMyOrder"
        android:text="View My Order"
        android:textAlignment="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:textAllCaps="false"
        style="@style/Button.Secondary"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

</LinearLayout>